@model RegistrationDto

<form method="post">
    <div class="card col-md-8 mx-auto mt-3">
        <div class="card-header  bg-success bg-gradient">
            <div class="row text-center">
                <h2 class="text-white">Registration</h2>
            </div>
        </div>
        <div class="card-body">
            <div class="p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating col-md-8 offset-md-2">
                    <input asp-for="FullName" class="form-control border shadow" placeholder="" />
                    <label asp-for="FullName" class="ms-1"></label>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-floating my-2 col-md-8 offset-md-2">
                    <input asp-for="Email" class="form-control border shadow" placeholder="" />
                    <label asp-for="Email" class="ms-1"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-2 col-md-8 offset-md-2">
                    <input asp-for="Password" class="form-control border shadow" placeholder="" />
                    <label asp-for="Password" class="ms-1"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating my-2 col-md-8 offset-md-2">
                    <input asp-for="ConfirmPassword" class="form-control border shadow" placeholder="" />
                    <label asp-for="ConfirmPassword" class="ms-1"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="py-2 col-md-8 offset-md-2 form-check ">
                    <input asp-for="IsRemember" class="form-check-input" />
                    <label asp-for="IsRemember" class="form-check-label"></label>
                </div>
                <div class="row">
                    <div class="col col-md-4 mx-auto">
                        <input type="submit" value="Register" class="btn btn-primary w-100" />
                    </div>
                </div>
            
            </div>
        </div>
    </div>
</form>